<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gome_list01_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/gome_padding_size_20dp"
        android:paddingLeft="@dimen/gome_padding_size_20dp">

        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/gome_padding_size_14dp"
            android:textAppearance="@style/card_view_default_appearance"/>
        <TextView android:id="@+id/summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/gome_second_line_text_color"
            android:textSize="@dimen/gome_custom_text_size_13sp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/gome_padding_size_20dp"
        android:layout_marginRight="@dimen/gome_padding_size_20dp"
        android:id="@+id/divider_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gome_padding_size_1dp"
        android:background="@drawable/card_listview_divider"
        android:layerType="software"/>
</LinearLayout>