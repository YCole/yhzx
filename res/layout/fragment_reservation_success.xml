<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gome_padding_fill_bg_f1f3f5"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gome_padding_size_5dp"
        android:paddingRight="@dimen/gome_padding_size_5dp">

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_view_padding_top"
                android:layout_marginBottom="@dimen/search_view_padding_bottom"
                android:drawableLeft="@drawable/gome_icon_wancheng"
                android:gravity="center"
                android:drawablePadding="@dimen/gome_padding_size_2.8dp"
                android:text="@string/commit_success"
                android:textColor="@color/gome_normal_black"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>