<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/gome_padding_size_16dp"
    android:paddingBottom="@dimen/gome_padding_size_16dp"
    android:paddingLeft="@dimen/gome_padding_size_20dp"
    android:paddingRight="@dimen/gome_padding_size_20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/btn_card_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:text="@string/fold_card_view"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:alpha="@dimen/alpha90"/>

    <com.gome.usercenter.view.DrawableTextView
        android:id="@+id/list_item_header_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/gome_sys_ic_book"
        android:drawableTint="@color/white"
        app:drawableLeftWidth="@dimen/gome_list_small_icon_size"
        app:drawableLeftHeight="@dimen/gome_list_small_icon_size"
        android:drawablePadding="@dimen/gome_padding_size_5dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/btn_card_header"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:alpha="@dimen/alpha90"/>


</RelativeLayout>