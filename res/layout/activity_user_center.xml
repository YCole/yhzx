<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_center_bg"
    tools:context="com.gome.usercenter.activity.HomeActivity"
    android:orientation="vertical">

    <include android:id="@+id/gome_account"
    	layout="@layout/gome_account"/>

    <GridView android:id="@+id/user_center_targets"
        android:paddingLeft="@dimen/gome_padding_size_10dp"
        android:paddingRight="@dimen/gome_padding_size_10dp"
        android:paddingTop="@dimen/gome_padding_size_25dp"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:verticalSpacing="@dimen/gome_padding_size_25dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/gome_padding_size_10dp"
        android:elevation="@dimen/gome_elevation_size"
        android:numColumns="3"/>
</LinearLayout>
