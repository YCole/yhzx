<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/update_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/default_button_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gome_padding_size_20dp"
            android:paddingRight="@dimen/gome_padding_size_20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:textColor="@color/gome_first_line_text_color"
                android:textSize="@dimen/gome_first_line_text_size"/>
            <TextView
                android:id="@+id/message_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/gome_padding_size_2dp"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:textColor="@color/gome_second_line_text_color"
                android:textSize="@dimen/gome_second_line_text_size"/>
            <ImageView
                android:id="@+id/image_wlan"
                android:layout_gravity="center"
                android:layout_width="@dimen/gome_padding_size_218dp"
                android:layout_height="@dimen/gome_padding_size_153dp"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:background="@drawable/gome_icon_usercenter_wlan_image"
                android:scaleType="fitXY"
                android:visibility="gone"/>
            <Button
                android:id="@+id/button_to_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gome_button_small_height"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gome_base_color_dark_blue"
                android:text="@string/to_setting"/>
            <TextView
                android:id="@+id/message_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/gome_padding_size_2dp"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:textColor="@color/gome_second_line_text_color"
                android:textSize="@dimen/gome_second_line_text_size"/>
            <TextView
                android:id="@+id/message_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/gome_padding_size_2dp"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:textColor="@color/gome_second_line_text_color"
                android:textSize="@dimen/gome_second_line_text_size"/>
            <TextView
                android:id="@+id/message_content_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/gome_padding_size_2dp"
                android:layout_marginTop="@dimen/gome_padding_size_20dp"
                android:textColor="@color/gome_second_line_text_color"
                android:textSize="@dimen/gome_second_line_text_size"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
