<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_gome_shape_radius" />
            <solid android:color="@color/btn_gome_shape_press_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_gome_shape_radius" />
            <solid android:color="@color/btn_gome_shape_press_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_gome_shape_radius" />
            <solid android:color="@color/btn_gome_shape_unpress_color" />
            <stroke android:width="@dimen/btn_gome_shape_border_width" android:color="@color/btn_gome_shape_border_color" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_gome_shape_radius" />
            <solid android:color="@color/btn_gome_shape_no_enable_color" />
            <stroke android:width="@dimen/btn_gome_shape_border_width" android:color="@color/btn_gome_shape_border_color" />
        </shape>
    </item>
</selector>
